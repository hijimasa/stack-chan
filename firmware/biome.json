{
	"$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["stackchan/speeches/calculate-power.js"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noSwitchDeclarations":"off"
			},
			"suspicious": {
				"noExplicitAny":"off",
				"noImplicitAnyLet":"off",
				"noDoubleEquals":"off",
				"noConfusingVoidType":"off",
				"noAssignInExpressions":"off"
			},
			"style": {
				"noUselessElse":"off",
				"noParameterAssign":"off",
				"useDefaultParameterLast":"off",
				"useNodejsImportProtocol":"off",
				"useExponentiationOperator":"off",
				"useSingleVarDeclarator":"off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"lineWidth": 120
		}
	},
	"json": {
		"formatter": {
			"lineWidth": 80
		}
	}
}
